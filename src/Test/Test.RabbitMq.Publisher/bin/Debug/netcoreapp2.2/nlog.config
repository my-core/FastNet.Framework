<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Debug" internalLogFile="/logs/nlog-dicestate-internal.log">

    <targets>

        <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->
        <default-wrapper xsi:type="BufferingWrapper" bufferSize="100" flushTimeout="5000"/>

        <!-- write logs to file  -->

        <target xsi:type="ColoredConsole" name="console"
                           layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

        <target xsi:type="File" name="allfile" fileName="${basedir}/logs/dicestate-all-${shortdate}.log"
                layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" archiveFileName="${basedir}/logs/dicestate-all-${shortdate}-{#####}.log" archiveAboveSize="20480000" archiveNumbering="Sequence" maxArchiveFiles="9999" concurrentWrites="true" keepFileOpen="false" encoding="utf-8"/>

    </targets>

    <rules>
        <!-- add your logging rules here -->
        <!--All logs, including from Microsoft-->
        <logger name="*" minlevel="Trace" writeTo="allfile" />
        <!--<logger name="*" minlevel="Trace" writeTo="console" />-->
        <!--Skip non-critical Microsoft logs and so log only own logs-->
      <logger name="Microsoft.*" minLevel="Trace" final="true" />
        <!-- BlackHole without writeTo -->
        <logger name="*" minlevel="Debug" writeTo="console" />
    </rules>
</nlog>
